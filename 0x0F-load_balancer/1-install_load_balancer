#!/usr/bin/env bash
# Installs haproxy
requirements="\
frontend load_balancer
    bind *:80
    mode http
    default_backend foo

backend foo
    balance roundrobin
    server foo1 35.190.196.147 check
    server foo2 34.75.12.144 check
"
apt-get -y install software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.0
apt-get -y update
apt-get -y install haproxy=2.0.\*
echo "$requirements" >> /etc/haproxy/haproxy.cfg
service haproxy start
